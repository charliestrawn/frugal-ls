{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Frugal IDL",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#identifiers"
		},
		{
			"include": "#operators"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.frugal",
					"match": "\\b(namespace|include|cpp_include)\\b"
				},
				{
					"name": "keyword.other.frugal",
					"match": "\\b(service|scope|struct|enum|exception|const|typedef|union|prefix)\\b"
				},
				{
					"name": "storage.type.frugal",
					"match": "\\b(void|bool|byte|i16|i32|i64|double|string|binary|list|set|map)\\b"
				},
				{
					"name": "storage.modifier.frugal",
					"match": "\\b(required|optional)\\b"
				},
				{
					"name": "keyword.other.frugal",
					"match": "\\b(throws|oneway|extends)\\b"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.frugal",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.frugal",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.single.frugal",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape.frugal",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.frugal",
					"match": "//.*$"
				},
				{
					"name": "comment.block.frugal",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.frugal",
					"match": "\\b\\d+(\\.\\d+)?([eE][+-]?\\d+)?\\b"
				},
				{
					"name": "constant.numeric.hex.frugal",
					"match": "\\b0[xX][0-9a-fA-F]+\\b"
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"name": "entity.name.function.frugal",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()"
				},
				{
					"name": "entity.name.type.frugal",
					"match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
				},
				{
					"name": "variable.other.frugal",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.frugal",
					"match": "[=<>!]=?|[<>]=?|[+\\-*/%]|&&|\\|\\||!"
				},
				{
					"name": "punctuation.separator.frugal",
					"match": "[,;:]"
				},
				{
					"name": "punctuation.section.frugal",
					"match": "[{}\\[\\]()]"
				}
			]
		}
	},
	"scopeName": "source.frugal"
}